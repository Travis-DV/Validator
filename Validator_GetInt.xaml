<Window x:Class="Validator.Validator_GetInt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Validator"
        mc:Ignorable="d"
        Title="Input Int" Height="200" Width="250">
    <Grid>
        <GroupBox 
            Background="LightGray" 
            Height="100" Width="150" 
            Margin="0,15,0,0" 
            HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid>
                <Label 
                    x:Name="LB_Input" 
                    Content="ERROR" 
                    HorizontalAlignment="center" VerticalAlignment="Top"
                    Margin="0,15,0,0" />
                <TextBox 
                    x:Name="TB_Input" 
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                    Margin="0,50,0,0" 
                    TextWrapping="Wrap"  
                    Width="120"
                    PreviewTextInput="NUMBERSONLY"/>
            </Grid>
        </GroupBox>
        <Button x:Name="BT_Ok"  Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="27" Width="117" Margin="0,15,0,15" Click="OkClicked"/>
    </Grid>
</Window>
